---
title: "Blog"
layout: "layout.njk"
---

<div class="flex flex-col md:flex-row justify-between items-center mb-12 gap-6">
    <h1 class="page-title">Insights & Articles</h1>
    <div class="flex flex-col sm:flex-row items-center gap-4 w-full md:w-auto">
        <div class="relative w-full sm:w-64">
            <input type="text" id="search-input" placeholder="Search articles..." class="w-full pl-10 pr-4 py-2 theme-input rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500/50 transition-all text-sm" aria-label="Search articles">
            <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 muted-text text-xs"></i>
        </div>
        <a href="/feed.xml" class="btn flex items-center whitespace-nowrap" aria-label="Subscribe to RSS Feed">
            <i class="fa-solid fa-rss mr-2"></i>Subscribe via RSS
        </a>
    </div>
</div>

<div class="space-y-8">
{%- for post in collections.blog | reverse -%}
  {%- set draft = post.data.draft %}
  {%- if not draft  %}
    <div class="card group">
      <h2 class="text-2xl font-bold mb-1">
        <a href="{{ post.url }}" class="card-heading hover:text-accent-primary transition-colors">{{ post.data.title }}</a>
      </h2>
      <div class="flex items-center meta-info mb-4">
        <i class="fa-solid fa-calendar mr-2" aria-hidden="true"></i>
        <p>{{ post.date | readableDate }}</p>
        <span class="mx-2 separator opacity-40">|</span>
        <i class="fa-solid fa-clock mr-2" aria-hidden="true"></i>
        <span>{{ post.templateContent | readingTime }}</span>
        <span class="mx-2 separator opacity-40">|</span>
        <i class="fa-solid fa-eye mr-2" aria-hidden="true"></i>
        <span class="view-count" data-view-count data-slug="{{ post.fileSlug }}">...</span>
      </div>
      {% if post.data.excerpt %}
        <p class="article-text">{{ post.data.excerpt }}</p>
      {% endif %}
    </div>
  {%- endif -%}
{%- endfor -%}
</div>
<script src="/js/view-counter.js"></script>
<script src="/js/search.js"></script>
