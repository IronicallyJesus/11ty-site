        </div>

        <!-- Tidbit Text -->
        <div class="lg:w-1/2 mx-auto lg:text-center pl-12 lg:pl-0 pr-4 lg:pr-0 relative z-20">
            <span
                class="inline-block py-1 px-3 rounded-full bg-[var(--bg-color)] border border-accent-primary/20 text-xs font-semibold text-accent-primary shadow-sm">
                {{ role.timeline_tidbit }}
