<div
    class="relative space-y-12 before:absolute before:inset-0 before:ml-5 before:-translate-x-px lg:before:mx-auto lg:before:translate-x-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-transparent before:via-accent-primary before:to-transparent">

    {% from "components/experience-card.njk" import experienceCard %}

    {%- for role in roles -%}
    {{ experienceCard(role, loop.index) }}

    {%- if role.timeline_tidbit -%}
