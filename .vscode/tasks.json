{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-compose-up",
      "type": "shell",
      "command": "docker compose -f docker-compose.dev.yml up --build",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Attaching to",
            "endsPattern": "Server at"
          }
        }
      ]
    },
    {
      "label": "docker-compose-down",
      "type": "shell",
      "command": "docker compose down"
    }
  ]
}
